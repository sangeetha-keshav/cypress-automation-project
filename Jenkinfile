pipeline{
    agent any
    stages {
        stage('build') {
            steps {
                echo 'building project'
                node {
                    sh 'npm ci'
                }
            }
        }
        stage('cypress test') {
            steps {
                echo 'running cypress automation test'
                node {
                    sh 'npx cypress run'
                }
            }
        }
    }
}
